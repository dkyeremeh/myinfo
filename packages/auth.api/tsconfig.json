{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "shared/*": ["../../shared/build/*"]
    }
  },

  "exclude": [
    "node_modules",
    "migrations",
    "knexfile.ts",
    "ui",
    "vite.config.ts"
  ]
}
